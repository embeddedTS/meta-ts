MODEL=$(cat /proc/device-tree/model)
if echo $MODEL | egrep -q "\-8950"; then
	xinput set-prop "ADS7846 Touchscreen" "Evdev Axis Calibration" 3998 172 3903 285
elif echo $MODEL | egrep -q "\-8390"; then
	xinput set-prop "ADS7843 Touchscreen" "Evdev Axis Calibration" 3998 172 3903 285
elif echo $MODEL | egrep -q "\-7990"; then
	xinput set-prop "ADS7846 Touchscreen" "Evdev Axis Calibration" 3998 172 3903 285
fi
